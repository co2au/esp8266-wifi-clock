# EditorConfig is awesome: https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Indentation defaults
indent_style = space
indent_size = 2

# Arduino / C / C++
[*.{ino,cpp,h,hpp,c}]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# INI / config
[*.{ini,cfg,conf,properties}]
indent_style = space
indent_size = 2

# JSON / YAML / XML
[*.{json,yml,yaml,xml}]
indent_style = space
indent_size = 2

# Makefiles must use hard tabs
[Makefile]
indent_style = tab

# Markdown: keep intentional trailing spaces (line breaks)
[*.md]
trim_trailing_whitespace = false

